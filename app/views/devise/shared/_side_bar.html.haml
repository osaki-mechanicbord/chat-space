.chat-side
  .side-header
    %p.side-header__user-name 
      = current_user.name
    %ul.user-menu
      = link_to new_group_path, class:"new__btn" do
        = fa_icon 'edit'    
      %li.user-menu__new-group
        = link_to  edit_user_registration_path, class:"edit__btn" do
          = fa_icon 'cog'
      %li.user-menu__edit-user   
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

